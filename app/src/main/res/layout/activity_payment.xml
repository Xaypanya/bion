<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:adjustViewBounds="true"
        android:background="@drawable/box"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:src="@drawable/weed" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nsl_extra_bold"
            android:text="ໃບອ່ອນ"
            android:textColor="@color/four"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:adjustViewBounds="true"
        android:background="@color/primary">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/box_reverse"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingHorizontal="40dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/nsl_bold"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:text="ລາຍລະອຽດການສັ່ງຊື້"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/billbox"
                >
                <TextView
                    android:id="@+id/showUser"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text=""
                    android:fontFamily="@font/nsl_bold"
                    />
                <TextView
                    android:id="@+id/showPhone"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text=""
                    android:fontFamily="@font/nsl_bold"
                    />
                <TextView
                    android:id="@+id/showAddress"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text=""
                    android:fontFamily="@font/nsl_bold"
                    />
                <TextView
                    android:id="@+id/showItemType"
                    android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text=""
                    android:fontFamily="@font/nsl_bold"
                    />
                <TextView
                    android:id="@+id/showItem"
                    android:drawableLeft="@drawable/ic_baseline_shopping_basket_24"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text=""
                    android:fontFamily="@font/nsl_bold"
                    />
                <TextView
                    android:id="@+id/showItemQuantity"
                    android:drawableLeft="@drawable/ic_baseline_shopping_basket_24"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text=""
                    android:fontFamily="@font/nsl_bold"
                    />
                <TextView
                    android:id="@+id/showItemPrice"
                    android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text=""
                    android:fontFamily="@font/nsl_bold"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btnCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/nsl_bold"
                android:text="ສຳເລັດ" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>